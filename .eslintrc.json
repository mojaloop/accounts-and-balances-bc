{
  "root": true,
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
    "node": true,
    "es2022": true // Automatically sets the ecmaVersion parser option to 2022.
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "semi": [
      "warn"
    ],
    "@typescript-eslint/no-inferrable-types": [
      "off"
    ]
  },
  "overrides": [
    {
      "files": [
        "**/test/**/*.ts"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": [
          "off"
        ],
        "@typescript-eslint/no-non-null-assertion": [
          "off"
        ]
      }
    }
  ]
}