  "scripts": {
    "prepare": "husky install",
    "clean:dist": "rm -fr ./dist/ && npm -ws -p run clean:dist",
    "dep:check": "ncu -e 2 && npm -ws -p run dep:check",
    "dep:upgrade": "ncu -u && npm -ws -p run dep:upgrade",
    "audit:check": "npm -ws -p run audit:check",
    "audit:fix": "npm -ws -p run audit:fix",
    "lint": "npm -ws -p run lint",
    "build": "npm -ws run build",
    "test:unit": "npm -ws -p run test:unit",
    "test:integration-infra-mongo-accounts": "jest ./test/integration/infrastructure/mongodb/mongo_accounts_repo.test.ts",
    "test:integration-infra-mongo-je": "jest ./test/integration/infrastructure/mongodb/mongo_journal_entries_repo.test.ts",
    "test:integration-infra-elastic-accounts": "jest ./test/integration/infrastructure/elasticsearch/elastic_accounts_repo.test.ts",
    "test:integration-infra-elastic-je": "jest ./test/integration/infrastructure/elasticsearch/elastic_journal_entries_repo.test.ts",
    "test:integration-infra-mongo": "jest ./test/integration/infrastructure/mongodb/",
    "test:integration-infra-elastic": "jest ./test/integration/infrastructure/elasticsearch/",
    "test:integration-infra": "jest ./test/integration/infrastructure/",
    "test:integration-rest": "jest ./test/integration/rest.test.ts",
    "test:integration-grpc": "jest ./test/integration/grpc.test.ts",
    "test:integration": "jest ./test/integration/",
    "start:rest-svc": "npm -w @mojaloop/accounts-and-balances-bc-rest-svc start",
    "start:grpc-svc": "npm -w @mojaloop/accounts-and-balances-bc-grpc-svc start",
    "publish:public-types-lib": "npm -w @mojaloop/accounts-and-balances-bc-public-types-lib run pub",
    "publish:rest-client-lib": "npm -w @mojaloop/accounts-and-balances-bc-rest-client-lib run pub",
    "publish:grpc-common-lib": "npm -w @mojaloop/accounts-and-balances-bc-grpc-common-lib run pub",
    "publish:grpc-client-lib": "npm -w @mojaloop/accounts-and-balances-bc-grpc-client-lib run pub"
  },
  "devDependencies": {
    "@types/jest": "~29.2.4",
    "@typescript-eslint/eslint-plugin": "~5.46.1",
    "@typescript-eslint/parser": "~5.46.1",
    "eslint": "~8.29.0",
    "husky": "~8.0.2",
    "jest": "~29.3.1",
    "npm-check-updates": "~16.5.6",
    "ts-jest": "~29.0.3",
    "typescript": "~4.9.4"
