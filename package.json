  "private": true,
  "scripts": {
    "postinstall": "",
    "clean:dist": "rm -fr dist && npm -ws -p run clean:dist",
    "clean:npm": "rm -fr node_modules package-lock.json",
    "clean:log": "rm -f *.log && npm -ws -p run clean:log",
    "clean:all": "npm run clean:dist && npm run clean:npm && npm run clean:log",
    "dep:check": "ncu -e 2 && npm -ws -p run dep:check",
    "dep:update": "ncu -u && npm -ws -p run dep:update",
    "lint": "eslint test && npm -ws -p run lint",
    "build": "npm -ws run build",
    "test:unit": "npm -ws run test:unit",
    "test:integration": "jest test/integration",
    "start:builtin-ledger-grpc-svc": "npm -w @mojaloop/accounts-and-balances-bc-builtin-ledger-grpc-svc start",
    "start:grpc-svc": "npm -w @mojaloop/accounts-and-balances-bc-grpc-svc start",
    "pub:public-types-lib": "npm -w @mojaloop/accounts-and-balances-bc-public-types-lib run pub",
    "pub:grpc-client-lib": "npm -w @mojaloop/accounts-and-balances-bc-grpc-client-lib run pub"
  },
  "engines": {
    "node": ">=18.13.0"
  },
  "devDependencies": {
    "@types/jest": "~29.2.6",
    "@types/node": "~18.11.18",
    "@typescript-eslint/eslint-plugin": "~5.49.0",
    "@typescript-eslint/parser": "~5.49.0",
    "eslint": "~8.32.0",
    "husky": "~8.0.3",
    "jest": "~29.4.0",
    "npm-check-updates": "~16.6.3",
    "ts-jest": "~29.0.5",
    "typescript": "~4.9.4"
  },
  "dependencies": {
    "tslib": "~2.4.1"
  },
  "workspaces": [
    "packages/public-types-lib",
    "packages/builtin-ledger-grpc-client-lib",
    "packages/builtin-ledger-grpc-svc",
    "packages/grpc-client-lib",
    "packages/grpc-svc",
    "packages/shared-mocks-lib",
    "packages/*"
  ]
}
