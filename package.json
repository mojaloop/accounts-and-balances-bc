  "scripts": {
    "clean": "yarn workspaces foreach -v --parallel run clean",
    "clean:dist": "yarn workspaces foreach -v --parallel run clean:dist",
    "clean:node-modules": "yarn workspaces foreach -v --parallel run clean:node-modules",
    "clean:dist-and-node-modules": "yarn workspaces foreach -v --parallel run clean:dist-and-node-modules",
    "lint": "yarn workspaces foreach -v --parallel run lint",
    "build:domain": "yarn workspace @mojaloop/accounts-and-balances-bc-domain run build",
    "build:client": "yarn workspace @mojaloop/accounts-and-balances-bc-client run build",
    "build:web-service-app": "yarn workspace @mojaloop/accounts-and-balances-bc-web-service-app run build",
    "build:integration-tests": "yarn workspace @mojaloop/accounts-and-balances-bc-integration-tests run build",
    "build": "yarn build:domain && yarn build:client && yarn build:web-service-app && yarn build:integration-tests",
    "clean-and-build": "yarn clean && yarn build",
    "test:unit": "yarn workspaces foreach -v run test:unit",
    "test:integration": "yarn workspace @mojaloop/accounts-and-balances-bc-integration-tests run test:integration",
    "publish": "yarn workspaces foreach -v --parallel run publish"
