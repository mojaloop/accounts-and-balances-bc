{
  "compilerOptions": { // https://www.typescriptlang.org/tsconfig
    // Language and Environment.
    "target": "es2022",
    // Modules.
    "module": "commonjs",
    // Emit.
    "declaration": true, // For type generation (.d.ts files).
    "importHelpers": true, // tslib required as a dependency!
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true, // For debugging (.js.map files).
    // Interop Constraints.
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // Type Checking.
    "noImplicitReturns": true,
    "strict": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "packages/*/src"
  ]
}